{"ast":null,"code":"import { jsxs as _jsxs } from \"react/jsx-runtime\";\nimport { Fragment as _Fragment } from \"react/jsx-runtime\";\nimport { jsx as _jsx } from \"react/jsx-runtime\";\nimport { useField } from 'formik';\nimport React, { useState } from 'react';\nimport { RadioButton } from './RadioButton';\nimport styles from './radiogroup.module.scss';\nexport const RadioGroup = ({\n  name,\n  selectOption,\n  heading,\n  option\n}) => {\n  const [field] = useField(name);\n  const {\n    0: value,\n    1: setValue\n  } = useState(field.value);\n\n  const onChange = e => {\n    field.onChange(e);\n\n    if (option && option.setValue) {\n      option.setValue(e.target.value);\n    } else setValue(e.target.value);\n  };\n\n  const checked = v => v === (option && option.value || value);\n\n  return /*#__PURE__*/_jsxs(_Fragment, {\n    children: [/*#__PURE__*/_jsx(\"h4\", {\n      className: styles.h4,\n      children: heading\n    }), /*#__PURE__*/_jsx(\"div\", {\n      className: styles.radiogroup,\n      children: selectOption.map((item, i) => /*#__PURE__*/_jsx(RadioButton, {\n        name: field.name,\n        onChange: onChange,\n        isActiv: checked(item),\n        value: item,\n        children: item\n      }, i))\n    })]\n  });\n};","map":null,"metadata":{},"sourceType":"module"}